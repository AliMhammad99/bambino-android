<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LiveVideoFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/tv_no_connected_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/gotham_medium"
        android:gravity="center"
        android:text="No Connected Device."
        android:textColor="@color/gray"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/live_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/image" />

    <TextView
        android:id="@+id/header_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/gotham_bold"
        android:text="Live Video"

        android:textColor="@color/gray"
        android:textSize="28sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:indeterminateTint="@color/beige"
        android:scaleX="0.15"
        android:scaleY="0.15" />

    <ImageButton
        android:id="@+id/btn_flash"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:backgroundTint="#00000000"
        android:focusable="true"
        android:foreground="@drawable/rpl_btn_back"
        android:padding="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_flash_off"
        android:tooltipText="Flash On/Off"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="95dp"
        android:layout_marginRight="20dp"
        app:tint="@color/white"
        />

</FrameLayout>