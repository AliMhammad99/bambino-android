<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerView2"
            android:name="com.fyp.bambino.DashBoardFragment"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.72"
            tools:layout="@layout/fragment_dash_board" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_weight="0.08"
            android:background="@drawable/slc_nav"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_dashboard"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:focusable="true"

                android:backgroundTint="#00000000"
                android:scaleType="centerInside"
                android:src="@drawable/ic_dashboard"
                android:tooltipText="Dashboard" />

            <ImageButton
                android:id="@+id/btn_live_video"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:backgroundTint="#00000000"
                android:scaleType="centerInside"
                android:src="@drawable/ic_live_video"
                android:tooltipText="Live Video" />

            <ImageButton
                android:id="@+id/btn_config"
                android:layout_width="90dp"
                android:layout_height="60dp"

                android:backgroundTint="#00000000"
                android:scaleType="centerInside"
                android:src="@drawable/ic_config"
                android:tooltipText="Configuration" />


        </LinearLayout>

        <!--        <ImageButton-->
        <!--            android:id="@+id/btn_dashboar"-->
        <!--            android:layout_width="80dp"-->
        <!--            android:layout_height="80dp"-->

        <!--            android:backgroundTint="#00000000"-->
        <!--            android:scaleType="centerInside"-->
        <!--            android:src="@drawable/ic_live_video"-->
        <!--            android:tooltipText="Dashboard" />-->
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>